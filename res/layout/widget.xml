<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
            android:id="@+id/w_root"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/widget_bg">

        <ImageButton
            android:id="@+id/w_launcher"
            style="@style/widget_button"
            android:src="@drawable/w_launcher"/>

        <ImageButton
            android:id="@+id/w_drawing"
            style="@style/widget_button"
            android:src="@drawable/a_d_drawing"/>
        
        <ImageButton
            android:id="@+id/w_point"
            style="@style/widget_button"
            android:src="@drawable/a_point"/>

        <ImageButton
            android:id="@+id/w_camera"
            style="@style/widget_button"
            android:src="@drawable/a_camera" />

        <ImageButton
            android:id="@+id/w_path"
            style="@style/widget_button"
            android:src="@drawable/a_path" />

    </LinearLayout>

</FrameLayout>